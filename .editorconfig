root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.bat]
indent_style = tab
end_of_line = crlf

[*.{json,jsonc}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

[*.ps1]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab